<project name="Silver Library" default="dist" basedir=".">
    <description>
        Build file for silverlib
    </description>
  <!-- set global properties for this build -->
  <property name="src" location="src"/>
  <property name="build" location="build"/>
  <property name="doc" location="doc"/>

  <target name="init">
    <!-- Create the time stamp -->
    <tstamp/>
    <!-- Create the build directory structure used by compile -->
    <mkdir dir="${build}"/>
  </target>

  <target name="compile" depends="init"
        description="compile the source " >
    <!-- Compile the java code from ${src} into ${build} -->
    <javac srcdir="${src}" destdir="${build}"/>
  </target>

  <!-- Generate javadocs for current project into ${doc.dir} -->
  <target name="doc" depends="compile" description="generate documentation">
    <javadoc sourcepath="${src}" destdir="${doc}"/>
  </target>

  <target name="dist" depends="doc"
        description="generate the jar file" >
    <!-- Create the distribution directory -->

    <!-- Put everything in ${build} into the silverlib.jar file -->
    <jar jarfile="./lib/silverlib.jar" basedir="${build}"/>
  </target>

</project>
